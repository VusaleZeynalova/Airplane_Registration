
@using layihe.Dtos.FlightDtos
@model FlightToAddDto

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .registration {
        position: absolute;
        background-color: whitesmoke;
        padding: 40px;
        margin-left: 160px;
        margin-top: 70px;
        }

        .registration button {
            margin-top: 31px;
        }
    .registr-container {
        position: relative !important;
        background-image: url("../registrbackground.jpg");
        width: 100% !important;
        height: 101% !important;
        background-size: cover;
        background-position: center;
    }
</style>
<div class="registr-container">
<div class="registration">
    <form asp-controller="Flight" asp-action="Add" method="post">
        <div style="float:left">
            <div class="mb-3">
                <label for="name" class="form-label">DepartureCity Name</label>
                <select class="form-control" asp-for="DepartureCityId" asp-items="@(new SelectList(Model.DepartureCities,"Id","DepName"))"></select>
            </div>
            <div class="mb-3">
                <label for="name" class="form-label">ArrivialCity Name</label>
                <select class="form-control" asp-for="ArrivialCityId" asp-items="@(new SelectList(Model.ArrivialCities,"ArrivialCityId","Name"))"></select>
            </div>

            <div class="mb-3">
                <label for="genrename" class="form-label">DepartureTime</label>
                <input type="datetime-local" class="form-control" id="id" asp-for="DepartureTime" placeholder="Enter ArrivialTime">
            </div>
            <div class="mb-3">
                <label for="genrename" class="form-label">ArrivialTime</label>
                <input type="datetime-local" class="form-control" id="id" asp-for="ArrivialTime" placeholder="Enter ArrivialTime">
            </div>
        </div>
        <div style="float:left;margin-left:40px">
            <div class="mb-3">
                <label for="genrename" class="form-label">Capacity</label>
                <input type="text" class="form-control" id="id" asp-for="Capacity" placeholder="Enter Capacity">
            </div>
            <div class="mb-3">
                <label for="genrename" class="form-label">SeatingCapacity</label>
                <input type="text" class="form-control" id="id" asp-for="SeatingCapacity" placeholder="Enter Capacity">
            </div>
            <div class="mb-3">
                <label for="genrename" class="form-label">Price</label>
                <input type="text" class="form-control" id="id" asp-for="Price" placeholder="Enter Price">
            </div>
            <button type="submit" class="btn btn-primary">Save Flight</button>
        </div>

    </form>
    </div>
    </div>